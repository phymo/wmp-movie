/* components/card/card.wxss */
:host {
  display: block;
  height: 350rpx; 
}
.card-wrapper {
  display: flex;
  width: 100%;
  height: 100%;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 10rpx 40rpx 0 rgba(0,0,0,.19);
  overflow: hidden;
}

.content-container {
  position: relative;
  width: 400rpx;
}

.card-image {
  width: 250rpx;
  height: 100%;
}

.card-actions {
  position: absolute;
  right: 0;
  bottom: 0;
  padding: 16rpx;
}

/* components/comment-card/comment-card.wxss */
:host {
  display: block;
}

.comment-info {
  padding: 32rpx;
}

.comment-info view {
  margin: 10rpx 0;
}

.user-info {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  line-height: 35rpx;
}

image.avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: lightblue;
  margin-right: 16rpx;
}

.text-content {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow:ellipsis;
  /* 以上4行实现超过2行的文字以...代替  */
  font-weight: 300;
  font-size: 30rpx;
  line-height: 45rpx;
  margin-right: 16rpx;
  height: 90rpx; /* 强制高度为行高的2倍, 保证能完整显示2行文字 */
  overflow: hidden;
  word-break: break-all;
}
